<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/CameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        opencv:show_fps="true"
        opencv:camera_id="1" />
    <!--  Wide angle camera : id=0 ; Narrow angle camera: id = 1-->


    <RelativeLayout
        android:id="@+id/visage"
        android:visibility="visible"
        android:alpha="0.05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/face" />

    </RelativeLayout>

    <Switch
        android:id="@+id/enableYesSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20px"
        android:layout_marginTop="40px"
        android:text="Enable Yes" />

        <Switch
            android:id="@+id/enableNoSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20px"
            android:layout_marginTop="100px"
            android:text="Enable No" />


    <CheckBox
            android:id="@+id/visibleCheckBox"
            android:layout_marginStart="1100px"
            android:layout_marginTop="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide Face" />


        <Button
            android:id="@+id/initButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="236dp"
            android:text="Button"
            android:visibility="visible" />


        <CheckBox
            android:id="@+id/trackingBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20px"
            android:layout_marginTop="600px"
            android:text="TRACKING" />


    <CheckBox
        android:id="@+id/fastTracking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20px"
        android:layout_marginTop="200px"
        android:text="Fast Tracking" />




</FrameLayout>
