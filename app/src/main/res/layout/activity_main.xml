<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/CameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        opencv:show_fps="true"
        opencv:camera_id="1" />



    <RelativeLayout
        android:id="@+id/visage"
        android:visibility="visible"
        android:alpha="0.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/face" />

        <Switch
            android:id="@+id/enableNoSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20px"
            android:layout_marginTop="40px"
            android:text="Enable No"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/noTargetTxtView"
            android:layout_width="110px"
            android:layout_height="wrap_content"
            android:layout_marginStart="240px"
            android:layout_marginTop="30px"
            android:ems="10"
            android:inputType="number"
            android:text="20"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/visibleCheckBox"
            android:layout_marginStart="1100px"
            android:layout_marginTop="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide Face" />

        <Button
            android:id="@+id/MoveNoButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20px"
            android:layout_marginTop="100px"
            android:text="Move"
            android:visibility="gone"/>

        <Button
            android:id="@+id/initButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="192dp"
            android:layout_marginTop="100dp"
            android:text="Button"
            android:visibility="gone" />

        <TextView
            android:id="@+id/noPosTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20px"
            android:layout_marginTop="200px"
            android:text="TextView"
            android:visibility="gone"/>

        <CheckBox
            android:id="@+id/trackingBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20px"
            android:layout_marginTop="600px"
            android:text="TRACKING"
            android:visibility="gone" />

        <Switch
            android:id="@+id/switchEnergy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="208dp"
            android:layout_marginEnd="343dp"
            android:text="Switch"
            android:visibility="gone"/>


    </RelativeLayout>

</FrameLayout>
