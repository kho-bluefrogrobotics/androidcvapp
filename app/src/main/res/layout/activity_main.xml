<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE5E5"
    android:backgroundTint="#EAE4E4"
    tools:context=".MainActivity">




    <RelativeLayout
        android:id="@+id/visage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <!--  Wide angle camera : id=0 ; Narrow angle camera: id = 1-->


        <org.opencv.android.JavaCameraView
            android:id="@+id/CameraView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            opencv:camera_id="1"
            opencv:show_fps="true" />

        <Button
            android:id="@+id/candidatesBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="275dp"
            android:layout_marginTop="291dp"
            android:layout_toEndOf="@+id/personNameEditTxt"
            android:text="Display Candidates" />

        <CheckBox
            android:id="@+id/PreprocessCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="250dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/personNameEditTxt"
            android:text="w/o preprocess" />


        <Button
            android:id="@+id/initButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="236dp"
            android:text="Button"
            android:visibility="gone" />

        <CheckBox
            android:id="@+id/saveNameCkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="102dp"
            android:background="#EDE9E9"
            android:text="SAVE"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/personNameEditTxt"
            android:layout_width="150dp"
            android:layout_height="49dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="164dp"
            android:background="#F3EDED"
            android:text="Name?"
            android:textColor="#000000" />

        <Button
            android:id="@+id/displayAllBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="520dp"
            android:layout_marginTop="55dp"
            android:text="all?" />

        <Button
            android:id="@+id/loadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idxRemove"
            android:layout_alignStart="@+id/idxRemove"
            android:layout_marginStart="-20dp"
            android:layout_marginTop="5dp"
            android:text="load" />

        <Button
            android:id="@+id/removeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displayAllBtn"
            android:layout_alignParentStart="true"
            android:layout_marginStart="514dp"
            android:layout_marginTop="13dp"
            android:text="remove"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/idxRemove"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/removeBtn"
            android:layout_alignStart="@+id/removeBtn"
            android:layout_marginStart="36dp"
            android:layout_marginTop="13dp"
            android:ems="10"
            android:inputType="number"
            android:text="0"
            tools:text="0" />


    </RelativeLayout>




</FrameLayout>
